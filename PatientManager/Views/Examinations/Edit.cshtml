@model PatientManager.Models.Examination

@{
    ViewData["Title"] = "Edit Examination";
}

<h1>Edit Examination</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="PatientId" class="form-label">Patient</label>
        <select asp-for="PatientId" class="form-select" asp-items="ViewBag.Patients"></select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TypeId" class="form-label">Examination Type</label>
        <select asp-for="TypeId" class="form-select" asp-items="ViewBag.Types"></select>
        <span asp-validation-for="TypeId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model IEnumerable<PatientManager.Models.Patient>

@{
    ViewData["Title"] = "Patient Medical Files";
}

<h1>Patient List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>OIB</th>
            <th>Birth Date</th>
            <th>Gender</th>
            <th>Export</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.LastName</td>
                <td>@p.Oib</td>
                <td>@p.BirthDate.ToString("yyyy-MM-dd")</td>
                <td>@p.Spol</td>
                <td>
                    <a asp-action="ExportToCsv" asp-route-id="@p.Id" class="btn btn-sm btn-outline-success">
                        Export to CSV
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

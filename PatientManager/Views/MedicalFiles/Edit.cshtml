@model PatientManager.Models.Medicalfile

@{
    ViewData["Title"] = "Edit Medical File";
}

<h1>Edit Medical File</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="ExaminationId" class="form-label">Examination</label>
        <select asp-for="ExaminationId" class="form-control" asp-items="ViewBag.Examinations">
            <option value="">-- Select Examination --</option>
        </select>
        <span asp-validation-for="ExaminationId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FilePath" class="form-label"></label>
        <input asp-for="FilePath" class="form-control" />
        <span asp-validation-for="FilePath" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
